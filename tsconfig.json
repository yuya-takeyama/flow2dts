{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "build",
    "coverage",
    "node_modules"
  ],
  "compileOnSave": true
}
